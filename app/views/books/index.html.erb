<p id="notice"><%= notice %></p>

<h1 id = "header">---Current Inventory---</h1>

<table class= "center">
  <thead>
    <tr>
      <th style="height:50px;width:100px">BOOK TITLE</th>
      <th style="height:50px;width:100px">AUTHOR, <br>first name</th>
      <th style="height:50px;width:100px">AUTHOR, <br>last name</th>
      <th style="height:50px;width:100px">PAGES</th>
      <th style="height:50px;width:100px">ISBN</th>
      <th style="height:50px;width:100px">PRICE ($US)</th>
      <th style="height:50px;width:100px">DESCRIPTION</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr  style="text-align: center">
        <td><%= book.title %></td>
        <td><%= book.authorfirst %></td>
        <td><%= book.authorlast %></td>
        <td><%= book.pages %></td>
        <td><%= book.isbn %></td>
        <td><%= book.price %></td>
        <td><%= book.description %></td>
        <td style="width:100px"><%= link_to 'VIEW', book %></td>
        <td style="width:100px"><%= link_to 'EDIT', edit_book_path(book) %></td>
        <td style="width:100px"><%= link_to 'REMOVE', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

